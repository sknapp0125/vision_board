= simple_form_for @vision, html: { multipart: true } do |f|
  - if @vision.errors.any?
    #errors
      %h2
      = pluralize(@vision.errors.count, "error")
      prevented this Vision from saving
      %ul
        - @vision.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.input :title, input_html: { class: 'form-control' }

  .form-group
    = f.input :description, input_html: { class: 'form-control' }

  = f.button :submit, class: "btn btn-primary"